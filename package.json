{
  "name": "@fapfop/core",
  "version": "0.0.25",
  "description": "Function Oriented Programming (FOP) in Typescript",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "tslint -p tsconfig.json",
    "prettier": "prettier --list-different \"./src/**/*.ts\"",
    "fix-prettier": "prettier --write \"./src/**/*.ts\"",
    "clean": "rimraf ./lib",
    "prerelease": "npm run build",
    "prebuild": "npm run clean",
    "build:lib": "tsc -P tsconfig.build.json",
    "build:es": "tsc -P tsconfig.build-es6.json",
    "build": "npm run build:lib && npm run build:es",
    "prepare": "npm run build && cp -r ./lib/* . && rm -rf ./lib",
    "prepublishOnly": "npm run lint",
    "postpublish": "git clean -fd",
    "preversion": "npm run lint",
    "version": "npm run fix-prettier && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "David Shekunts <ditreyw@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dionid/fapfop.git"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "@types/prettier": "^2.4.1",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.4.4"
  },
  "bugs": {
    "url": "https://github.com/Dionid/fapfop/issues"
  },
  "homepage": "https://github.com/Dionid/fapfop",
  "tags": [
    "typescript",
    "algebraic-data-types",
    "functional-programming"
  ],
  "keywords": [
    "typescript",
    "algebraic-data-types",
    "functional-programming"
  ]
}
