{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [],
    "sourceMap": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "stripInternal": true,
    "noEmit": true,
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
